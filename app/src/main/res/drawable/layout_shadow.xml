<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- 둥근 모서리 -->
            <solid android:color="#D2CCCC" /> <!-- 연한 회색 그림자 -->
        </shape>
    </item>

    <!-- 테두리 -->
    <item android:left="2dp" android:right="3dp" android:top="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- 둥근 모서리 -->
            <solid android:color="#FFFFFF" /> <!-- 배경색: 투명 또는 흰색 -->
            <stroke
                android:width="1dp"
                android:color="#D2CCCC" /> <!-- 테두리 색상: 회색 -->
        </shape>
    </item>

</layer-list>
