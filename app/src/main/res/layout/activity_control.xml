<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SONATA"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 상단 제어 타이틀 -->
            <TextView
                android:id="@+id/tvControlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="차량 제어"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 제어 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical">

                <!-- 이미지와 텍스트 그룹 -->
                <LinearLayout
                    android:id="@+id/bottom_controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 문 잠금 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/lock"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circular_background"
                            android:padding="17dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/lock" />

                        <TextView
                            android:id="@+id/tv_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="문 잠금"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 시동 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/power"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circular_background"
                            android:padding="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/power_off" />

                        <TextView
                            android:id="@+id/tv_car_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="시동 켜기"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 문 열기 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/unlock"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circular_background"
                            android:padding="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unlock" />

                        <TextView
                            android:id="@+id/tv_unlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="문 열기"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_controls2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 문 잠금 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/poweroff"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circular_background"
                            android:padding="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/poweroff" />

                        <TextView
                            android:id="@+id/tv_lock2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="시동 끄기"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 시동 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/light"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circular_background"
                            android:padding="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/light" />

                        <TextView
                            android:id="@+id/tv_car_on2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="비상등"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 문 열기 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/siren"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circular_background"
                            android:padding="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/siren" />

                        <TextView
                            android:id="@+id/tv_unlock2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="비상등/경적"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 차량 온도 조절 텍스트 -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 온도 조절"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- 온도 설정 UI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- '-' 버튼 -->
                <Button
                    android:id="@+id/btnDecreaseTemp"
                    android:layout_width="43dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start"
                    android:background="@drawable/ic_minus"
                    android:backgroundTint="#E0E0E0"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <!-- 현재 온도 표시 -->
                <TextView
                    android:id="@+id/tvCurrentTemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="24.0℃"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <!-- '+' 버튼 -->
                <Button
                    android:id="@+id/btnIncreaseTemp"
                    android:layout_width="43dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_plus"
                    android:backgroundTint="#E0E0E0"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- SeekBar (온도 조절 슬라이더) -->
            <SeekBar
                android:id="@+id/seekBarTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:max="10" />

            <!-- Low/High 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textViewLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Low"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="High"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
